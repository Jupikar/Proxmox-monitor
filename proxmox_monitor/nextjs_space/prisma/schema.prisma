generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/proxmox_monitor/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model ProxmoxConfig {
  id        String   @id @default(cuid())
  url       String
  username  String
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LXCConfig {
  id            String   @id @default(cuid())
  proxmoxId     Int      @unique
  name          String
  ipAddress     String
  sshPort       Int      @default(22)
  sshUsername   String
  sshPassword   String?
  sshKey        String?  @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
